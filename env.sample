# Environment Variables Template
# Copy this file to .env, .env.local, or .env.prod and fill in the values

# AUTH
BETTER_AUTH_SECRET=your_auth_secret_here # 选填（如启用 better-auth）
BETTER_AUTH_URL=http://localhost:3000 # 选填（应用基地址）
NEXT_PUBLIC_APP_URL=http://localhost:3000 # 选填（客户端可用的应用地址）
TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000 # 选填（跨域信任源）

# DB
DATABASE_URL=your_drizzle_database_url_here # 必填（Drizzle 数据库连接）

# Social Media Client
GOOGLE_CLIENT_ID=your_google_client_id_here # 选填（Google 登录）
GOOGLE_CLIENT_SECRET=your_google_client_secret_here # 选填（Google 登录）

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000 # 必填（后端 API 地址）

# Allowed Development Origins
ALLOWED_DEV_ORIGINS=localhost,127.0.0.1 # 选填（开发白名单）

# Sanity CMS
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id # 必填
NEXT_PUBLIC_SANITY_DATASET=production # 必填
# Optional: lock to an API version (YYYY-MM-DD)
NEXT_PUBLIC_SANITY_API_VERSION=2025-10-28 # 选填

# Environment (development/production)
NODE_ENV=development # 选填（由脚本覆盖）
